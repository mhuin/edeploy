. ${ORIG}/common

if [ -z "$dir" -o ! -d "$src" -o -z "$version" ]; then
    echo "Usage: $0 <base directory> <target directory name> <version>" 1>&2
    exit 1
fi

if [ -z "${SRC}" ]; then
    SRC="${ORIG}"
fi

check_variables

set -e

# not nested call check
if [ ${src} != ${dir} ]; then
    echo -n "Copying tree ${src}/ to ${dir}/ "
    rsync -a --delete --numeric-ids ${src}/ ${dir}/
    echo ": done"
fi

common_setup
